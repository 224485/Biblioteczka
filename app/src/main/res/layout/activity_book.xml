<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_height="match_parent"
                                                           android:layout_width="match_parent">
            <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imgBook"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                    android:text="Currently Reading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnAddToCurrentlyReading"
                    app:layout_constraintTop_toBottomOf="@+id/btnAddToAlreadyReadList"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
            <Button
                    android:text="Want to read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnAddToWantToReadList"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"/>
            <Button
                    android:text="Already Read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnAddToAlreadyReadList"
                    app:layout_constraintStart_toEndOf="@+id/btnAddToWantToReadList"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.511" app:layout_constraintTop_toBottomOf="@+id/txtPages"/>
            <Button
                    android:text="Add to Favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnAddToFavorite"
                    app:layout_constraintTop_toBottomOf="@+id/btnAddToWantToReadList"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnAddToCurrentlyReading"
                    app:layout_constraintHorizontal_bias="0.633" app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="Ksiazka:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/txtBookName"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="15dp"/>
            <TextView
                    android:text="nazwa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtBookName"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtDescription" android:layout_marginTop="15dp"/>
            <TextView
                    android:text="Autor:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/txtAuthorName"
                    app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="15dp"/>
            <TextView
                    android:text="imie i nazwisko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtAuthorName"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtBookName" android:layout_marginTop="15dp"
                    app:layout_constraintStart_toEndOf="@+id/textView"/>
            <TextView
                    android:text="Pages:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/txtPages"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="15dp"/>
            <TextView
                    android:text="liczba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtPages"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtAuthorName" android:layout_marginTop="15dp"/>
            <TextView
                    android:text="Opis:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/txtDescription"
                    app:layout_constraintTop_toBottomOf="@+id/imgBook" android:layout_marginTop="30dp"/>
            <TextView
                    android:text="krotki Opis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtDescription"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgBook" android:layout_marginTop="30dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</RelativeLayout>