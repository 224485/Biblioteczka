<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_height="wrap_content"
                                                           android:layout_width="match_parent">
            <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imgBook"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="15dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/guideline2"/>
            <Button
                    android:text="@string/currently_read"
                    android:layout_width="150dp"
                    android:layout_height="75dp" android:id="@+id/btnAddToCurrentlyReading"
                    android:textAllCaps="false"
                    app:layout_constraintTop_toTopOf="@+id/guideline5"
                    app:layout_constraintStart_toStartOf="@+id/guideline4" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <Button
                    android:text="@string/will_read"
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:id="@+id/btnAddToWantToReadList"
                    android:textAllCaps="false"
                    app:layout_constraintTop_toTopOf="@+id/guideline"
                    app:layout_constraintEnd_toStartOf="@+id/guideline4" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/guideline5"/>
            <Button
                    android:text="@string/already_read"
                    android:layout_width="150dp"
                    android:layout_height="75dp" android:id="@+id/btnAddToAlreadyReadList"
                    android:textAllCaps="false"
                    app:layout_constraintTop_toTopOf="@+id/guideline"
                    app:layout_constraintBottom_toTopOf="@+id/guideline5" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline4"/>
            <Button
                    android:text="@string/favorite_book"
                    android:layout_width="150dp"
                    android:layout_height="75dp" android:id="@+id/btnAddToFavorite"
                    android:textAllCaps="false"
                    app:layout_constraintTop_toTopOf="@+id/guideline5" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline4" app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:text="Ksiazka:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="10dp"/>
            <TextView
                    android:text="nazwa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtBookName"
                    app:layout_constraintStart_toEndOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtDescription" android:layout_marginTop="10dp"/>
            <TextView
                    android:text="Autor:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="10dp"/>
            <TextView
                    android:text="nazwisko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtAuthorName"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintTop_toBottomOf="@+id/txtBookName" android:layout_marginTop="10dp"/>
            <TextView
                    android:text="Liczba stron:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"/>
            <TextView
                    android:text="liczba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtPages"
                    app:layout_constraintStart_toEndOf="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.503"
                    app:layout_constraintTop_toBottomOf="@+id/txtAuthorName" android:layout_marginTop="10dp"/>
            <TextView
                    android:text="Opis:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView7"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintTop_toTopOf="@+id/guideline2" android:layout_marginTop="10dp"/>
            <TextView
                    android:text="krotki Opis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtDescription"
                    app:layout_constraintStart_toEndOf="@+id/textView7"
                    app:layout_constraintTop_toTopOf="@+id/guideline2" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content" android:id="@+id/guideline"
                                                        app:layout_constraintGuide_begin="389dp"
                                                        android:orientation="horizontal"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:id="@+id/guideline2"
                                                        app:layout_constraintGuide_begin="243dp"
                                                        android:orientation="horizontal"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:id="@+id/guideline3"
                                                        app:layout_constraintGuide_begin="96dp"
                                                        android:orientation="vertical"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:id="@+id/guideline4"
                                                        app:layout_constraintGuide_begin="187dp"
                                                        android:orientation="vertical"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:id="@+id/guideline5"
                                                        app:layout_constraintGuide_begin="506dp"
                                                        android:orientation="horizontal"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</RelativeLayout>